<% if resource.errors.present? %>
  <div class="alert alert-danger" role="alert">
    <div>
      <h2>
        <%= t('.header', count: resource.errors.count) %> :
      </h2>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li class="text-danger"><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
